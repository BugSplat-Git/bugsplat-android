<resources>
    <!-- Base application theme. -->
    <style name="Theme.BugsplatExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorPrimaryVariant">@color/brand_navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_green</item>
        <item name="colorSecondaryVariant">@color/brand_yellow</item>
        <item name="colorOnSecondary">@color/brand_navy</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/brand_background</item>
    </style>
</resources> 